extends layout
 
block content
  h1= title
  - let items = results;
  div(class="container-fluid")
    div(class="row")
      each item in items
        - let destination = `dispatch(\"/potion/update?id=${item._id}\")`
        div(class="row-sm-2", class="m-1") Item #{item.name}(#{item.effect}) is #{item.potency}
          button.btn( class="btn-primary ml-1", onclick= destination) Update
 
  // Script to define the buy() function
  script.
    function buy(index) {
      alert(`You purchased item ${index}`);
    }
    function dispatch(path) {
      window.location.href=path
    }